//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit1.h"
#include <iostream>
#include <string>
#include <cmath>
#include <stack>
#include <vector>
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button1Click(TObject *Sender)
{
	Form1->Edit2->Text = FloatToStr(ShowAnswer(CalculateCOS(Form1->Edit1->Text)));
}
//---------------------------------------------------------------------------



void __fastcall TForm1::Button2Click(TObject *Sender)
{
	if(Sender == Button2) Form1->Edit1->Text += "1"; else
	if(Sender == Button3) Form1->Edit1->Text += "2"; else
	if(Sender == Button4) Form1->Edit1->Text += "3"; else
	if(Sender == Button5) Form1->Edit1->Text += "4"; else
	if(Sender == Button6) Form1->Edit1->Text += "5"; else
	if(Sender == Button7) Form1->Edit1->Text += "6"; else
	if(Sender == Button8) Form1->Edit1->Text += "7"; else
	if(Sender == Button9) Form1->Edit1->Text += "8"; else
	if(Sender == Button10) Form1->Edit1->Text += "9"; else
	if(Sender == Button11) Form1->Edit1->Text += "0"; else
	if(Sender == Button12) Form1->Edit1->Text = ""; else
	if(Sender == Button13) Form1->Edit1->Text = Form1->Edit1->Text.Delete(Form1->Edit1->Text.Length(),1); else
	if(Sender == Button14) Form1->Edit1->Text += "+"; else
	if(Sender == Button15) Form1->Edit1->Text += "-"; else
	if(Sender == Button16) Form1->Edit1->Text += "*"; else
	if(Sender == Button17) Form1->Edit1->Text += "/"; else
	if(Sender == Button18) Form1->Edit1->Text += "."; else
	if(Sender == Button19) Form1->Edit1->Text += "("; else
	if(Sender == Button20) Form1->Edit1->Text += ")"; else
	if(Sender == Button21) Form1->Edit1->Text += "^"; else
	if(Sender == Button23) Form1->Edit1->Text += "cos("; else
	if(Sender == Button22) Form1->Edit1->Text += "3.14159265";
}
//---------------------------------------------------------------------------


